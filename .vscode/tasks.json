{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run Java with File IO (macOS/Linux)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd \"${fileDirname}\" && javac \"${fileBasename}\" && java \"${fileBasenameNoExtension}\" < input.txt > output.txt"
            ],
            "presentation": {
                "reveal": "never",
                "close": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}